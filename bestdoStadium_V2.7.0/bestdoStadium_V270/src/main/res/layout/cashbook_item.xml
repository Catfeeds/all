<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/user_item_padd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_iv_icon"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/item_iv_classname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padd_imgtextleftright"
            android:singleLine="true"
            android:text="支出"
            android:textColor="@color/text_click_color"
            android:textSize="@dimen/text_contents_size" />

        <TextView
             android:id="@+id/item_iv_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingLeft="@dimen/padd_imgtextleftright"
            android:singleLine="true"
            android:text="-222222222"
            android:textColor="@color/text_click_color"
            android:textSize="@dimen/text_contents_size" />
    </LinearLayout>

    <TextView
         android:id="@+id/item_iv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:singleLine="true"
        android:text="统计数据时间段筛选"
        android:textColor="@color/text_noclick_color"
        android:textSize="@dimen/text_contents_size" />

</LinearLayout>