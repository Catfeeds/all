<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- 订单信息 -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/page_bg"
        android:padding="10dip"
        android:text="@string/userOrdersDetails_orderinfo"
        android:textColor="@color/text_noclick_color"
        android:textSize="@dimen/text_zhu_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padd_leftright" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_img_height"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/userorderdetails_orderinfo_tv_orderNo"
                style="@style/user_item_paddtopbottom"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/userOrders_orderNo"
                android:textColor="@color/text_noclick_color"
                android:textSize="@dimen/text_contents_size" />

            <TextView
                android:id="@+id/userorderdetails_orderinfo_tv_orderNocontent"
                style="@style/user_item_paddtopbottom"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:textColor="@color/text_contents_color"
                android:textSize="@dimen/text_contents_size" />
        </LinearLayout>

        <include layout="@layout/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_img_height"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/userorderdetails_orderinfo_tv_phone"
                style="@style/user_item_paddtopbottom"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/userOrdersDetails_phone"
                android:textColor="@color/text_noclick_color"
                android:textSize="@dimen/text_contents_size" />

            <TextView
                android:id="@+id/userorderdetails_orderinfo_tv_phonecontent"
                style="@style/user_item_paddtopbottom"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:textColor="@color/text_contents_color"
                android:textSize="@dimen/text_contents_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/userorderdetails_orderinfo_layout_palyers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_img_height"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <include layout="@layout/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_img_height"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/userorderdetails_orderinfo_tv_palyers"
                    style="@style/user_item_paddtopbottom"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/userOrdersDetails_palyers"
                    android:textColor="@color/text_noclick_color"
                    android:textSize="@dimen/text_contents_size" />

                <TextView
                    android:id="@+id/userorderdetails_orderinfo_tv_palyerscontent"
                    style="@style/user_item_paddtopbottom"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:textColor="@color/text_contents_color"
                    android:textSize="@dimen/text_contents_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>