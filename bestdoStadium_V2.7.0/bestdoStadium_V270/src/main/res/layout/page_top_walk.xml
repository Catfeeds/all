<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page_top_layout"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="@color/page_top_bg"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/pagetop_layout_back"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:gravity="left|center_vertical" >

       <ImageView
            android:id="@+id/pagetop_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:contentDescription="@string/contentDescription" />
         <LinearLayout
            android:id="@+id/pagetop_layout_huodonglist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="活动列表"
                 android:textColor="@color/white"
                 android:textSize="@dimen/text_contents_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/walk_img_huodong"
                android:visibility="gone"
                android:contentDescription="@string/contentDescription" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp" >

        <TextView
            android:id="@+id/pagetop_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/text_contents_color"
            android:textSize="@dimen/text_pagetop_size" />

        <TextView
            android:id="@+id/pagetop_tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/text_click_color"
            android:textSize="@dimen/text_zhu_size"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pagetop_layout_you"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:paddingRight="10dp" >

        <TextView
            android:id="@+id/pagetop_tv_you"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_contents_size"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/pagetop_iv_you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/contentDescription"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/pagetop_iv_you2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/contentDescription"
            android:gravity="right|center_vertical"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/pagetop_layout_rankinglist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/walk_img_rank"
                android:contentDescription="@string/contentDescription" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>