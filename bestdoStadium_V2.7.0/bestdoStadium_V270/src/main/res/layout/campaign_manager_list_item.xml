<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/corners_bg"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/user_item_paddlefgtright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/campaginlistitem_tv_status"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/padd_leftright" >

            <ImageView
                android:id="@+id/campagindetail_iv_clubicon"
                android:layout_width="14dp"
                android:layout_height="14dp" />

            <TextView
                android:id="@+id/campagindetail_tv_clubname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:textColor="@color/text_click_color"
                android:textSize="@dimen/text_contents_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/campaginlistitem_tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/padd_leftright"
            android:paddingTop="@dimen/padd_leftright"
            android:singleLine="true"
            android:textColor="@color/text_noclick_color"
            android:textSize="@dimen/text_contents_size" />
    </RelativeLayout>

    <LinearLayout
        style="@style/user_item_paddlefgtright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padd_imgtextleftright" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/campaignitem_img_date" />

        <TextView
            android:id="@+id/campagindetail_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/text_click_color"
            android:textSize="@dimen/text_contents_size" />

    </LinearLayout>

    <LinearLayout
        style="@style/user_item_paddlefgtright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padd_imgtextleftright" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/campaignitem_img_name" />

        <TextView
            android:id="@+id/campagindetail_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/text_click_color"
            android:textSize="@dimen/text_contents_size" />
    </LinearLayout>

    <LinearLayout
        style="@style/user_item_paddlefgtright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padd_leftright" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/campaignitem_img_address" />

        <TextView
            android:id="@+id/campagindetail_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:singleLine="true"
            android:textColor="@color/text_click_color"
            android:textSize="@dimen/text_contents_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/campaginlistitem_layout_bianji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padd_imgtextleftright"
            android:paddingTop="@dimen/padd_imgtextleftright" >

            <TextView
                android:id="@+id/campaginlistitem_tv_edit"
                style="@style/user_item_paddlefgtright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corners_selectbtnbg"
                android:paddingBottom="@dimen/padd_imgtextleftright"
                android:paddingTop="@dimen/padd_imgtextleftright"
                android:singleLine="true"
                android:text="编辑活动"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_contents_size" />

            <TextView
                android:id="@+id/campaginlistitem_tv_del"
                style="@style/user_item_paddlefgtright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padd_imgtextleftright"
                android:layout_marginRight="@dimen/padd_leftright"
                android:background="@drawable/corners_selectbtnbg"
                android:paddingBottom="@dimen/padd_imgtextleftright"
                android:paddingTop="@dimen/padd_imgtextleftright"
                android:singleLine="true"
                android:text="取消活动"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_contents_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>