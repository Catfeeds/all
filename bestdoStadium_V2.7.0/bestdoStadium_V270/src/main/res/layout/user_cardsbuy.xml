<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical" >

    <include layout="@layout/page_top" />

    <include layout="@layout/line" />

    <RelativeLayout 
         android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        >
        
    
    <com.bestdo.bestdoStadiums.utils.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/user_card_vipbg" />

            <com.bestdo.bestdoStadiums.utils.MyListView
                android:id="@+id/usercard_listview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="@color/page_bg"
                android:divider="@null"
                android:fadeScrollbars="true"
                android:fadingEdge="none"
                android:listSelector="@drawable/list_notselector"
                android:overScrollMode="never"
                android:scrollbars="none" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/jianju"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="10dip" >

                <TextView
                    android:id="@+id/not_date_tv_cardinstructions"
                    style="@style/user_item_paddtopbottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dip"
                    android:text="百动会员特权"
                    android:textColor="@color/text_contents_color"
                    android:textSize="@dimen/text_contents_size" />

                <include layout="@layout/line" />

                <TextView
                    style="@style/user_item_paddtopbottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/user_card_yuanbg"
                    android:drawablePadding="5dp"
                    android:paddingRight="10dip"
                    android:text="全国1000+优质场馆超低价格专享预订。"
                    android:textColor="@color/text_click_color"
                    android:textSize="@dimen/text_contents_size" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/user_card_yuanbg"
                        android:drawablePadding="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dip"
                        android:text="覆盖高尔夫、高尔夫练习场、游泳、健身、网球、羽毛球等热门运动。"
                        android:textColor="@color/text_click_color"
                        android:textSize="@dimen/text_contents_size" />
                </LinearLayout>

                <TextView
                    style="@style/user_item_paddtopbottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/user_card_yuanbg"
                    android:drawablePadding="5dp"
                    android:paddingRight="10dip"
                    android:text="卡片有效期12个月。"
                    android:textColor="@color/text_click_color"
                    android:textSize="@dimen/text_contents_size" />
            </LinearLayout>
        </LinearLayout>
    </com.bestdo.bestdoStadiums.utils.MyScrollView>
</RelativeLayout>
</LinearLayout>