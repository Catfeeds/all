<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- 第一条显示 -->

    <LinearLayout
        android:id="@+id/history_item_layout_firstinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_blue_color"
        android:orientation="vertical"
        android:visibility="gone"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/padd_topbottom" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/userwalk_run_jilu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:paddingTop="@dimen/padd_imgtextleftright"
                android:text="个人最佳成绩"
                android:textColor="@color/white"
                android:textSize="@dimen/text_zhu_size" />
        </LinearLayout>

        <LinearLayout
            style="@style/user_item_paddtopbottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/kilometer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:paddingBottom="@dimen/padd_imgtextleftright"
                    android:paddingTop="@dimen/padd_imgtextleftright"
                    android:text="最远距离(km)"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_zhu_size" />

                <TextView
                    android:id="@+id/first_tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_pagetop_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/userwalk_run_time" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:paddingBottom="@dimen/padd_imgtextleftright"
                    android:paddingTop="@dimen/padd_imgtextleftright"
                    android:text="最长时间"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_zhu_size" />

                <TextView
                    android:id="@+id/first_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:text="00:00:00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_pagetop_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/userwalk_run_speed" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:paddingBottom="@dimen/padd_imgtextleftright"
                    android:paddingTop="@dimen/padd_imgtextleftright"
                    android:text="最快配速"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_zhu_size" />

                <TextView
                    android:id="@+id/first_tv_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_pagetop_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--  -->

    <LinearLayout
        android:id="@+id/history_item_layout_otherinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/padd_leftright" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/history_item_tv_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="2013.12.22 22:32"
                android:textColor="@color/text_click_color"
                android:textSize="@dimen/text_zhu_size" />

            <TextView
                android:id="@+id/history_item_tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:text="6月32日"
                android:textColor="@color/text_click_color"
                android:textSize="@dimen/text_zhu_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padd_imgtextleftright"
            android:paddingTop="@dimen/padd_imgtextleftright" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/userwalk_history_img_speed" />

                <TextView
                    android:id="@+id/history_item_tv_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padd_imgtextleftright"
                    android:text="11.12"
                    android:textColor="@color/text_click_color"
                    android:textSize="@dimen/text_pagetop_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/userwalk_history_img_time" />

                <TextView
                    android:id="@+id/history_item_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padd_imgtextleftright"
                    android:text="03:11:12"
                    android:textColor="@color/text_click_color"
                    android:textSize="@dimen/text_pagetop_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/userwalk_history_img_calories" />

                <TextView
                    android:id="@+id/history_item_tv_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padd_imgtextleftright"
                    android:text="1112"
                    android:textColor="@color/text_click_color"
                    android:textSize="@dimen/text_pagetop_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/line" />

</LinearLayout>