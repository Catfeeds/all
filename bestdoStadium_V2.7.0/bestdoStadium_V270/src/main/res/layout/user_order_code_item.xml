<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
<ImageView
    android:id="@+id/user_order_code_topline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user_order_code_xuline"
        android:contentDescription="@string/contentDescription" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
            android:background="@drawable/user_order_code_triangle" >

            <TextView
                android:id="@+id/user_order_code_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/user_order_code_cont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:textColor="@color/blue"
            android:gravity="center_vertical"
            android:textSize="15sp"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/user_order_code_bottomline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user_order_code_xuline"
        android:contentDescription="@string/contentDescription" />

</LinearLayout>