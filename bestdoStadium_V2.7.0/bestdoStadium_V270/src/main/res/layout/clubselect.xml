<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical" >

    <include layout="@layout/page_top" />

    <include layout="@layout/line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_num"
            style="@style/user_item_paddtopbottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_noclick_color"
            android:paddingLeft="@dimen/padd_leftright"
            android:text="我管理的俱乐部"
            android:textColor="@color/white"
            android:textSize="@dimen/text_contents_size" />

        <ListView
            android:id="@+id/list_date"
            style="@style/user_item_paddlefgtright"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="@color/page_bg"
            android:divider="@null"
            android:dividerHeight="@dimen/jianju"
            android:fadeScrollbars="true"
            android:fadingEdge="none"
            android:listSelector="@drawable/list_notselector"
            android:overScrollMode="never"
            android:scrollbars="none" />
    </LinearLayout>

</LinearLayout>