<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frm_notdte"
    android:background="@color/page_bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/not_date_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:contentDescription="@string/contentDescription"
                  />

            <TextView
                android:id="@+id/not_date_cont2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:gravity="center_horizontal"
                android:textColor="@color/text_click_color"
                android:textSize="@dimen/text_contents_size"
                android:visibility="gone" />
            <TextView
                android:id="@+id/not_date_cont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:gravity="center_horizontal"
                android:text="@string/not_date"
                android:textColor="@color/text_noclick_color"
                android:textSize="@dimen/text_contents_size"
                android:visibility="invisible" />


            <TextView
                android:id="@+id/not_date_jihuo_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/user_login_btn_blue"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="立即去激活"
                android:textColor="@color/white"
                android:textSize="@dimen/text_contents_size"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>