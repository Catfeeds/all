<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/page_bg" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.bestdo.bestdoStadiums.utils.MyListView
            android:id="@+id/user_meber_myListView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:choiceMode="singleChoice"
            android:divider="@null"
            android:fadeScrollbars="true"
            android:fadingEdge="none"
            android:listSelector="@drawable/list_notselector"
            android:overScrollMode="never"
            android:scrollbars="none" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/jianju"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/jianju"
            android:layout_marginTop="@dimen/jianju"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <!-- 支付宝 -->

            <LinearLayout
                android:id="@+id/yinlian_pay_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/yinlian_pay"
                        android:gravity="center" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:paddingBottom="13dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="13dp"
                    android:text="银联支付"
                    android:textColor="@color/text_click_color"
                    android:textSize="@dimen/text_biaoti_size"
                    android:typeface="normal" />

                <CheckBox
                    android:id="@+id/yinlian_pay_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pay_zhifubao_select"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center" />
            </LinearLayout>

            <include layout="@layout/line" />

            <LinearLayout
                android:id="@+id/huawei_pay_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/huawei_pay"
                            android:gravity="center" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:paddingBottom="13dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="13dp"
                        android:text="HuaWei Pay"
                        android:textColor="@color/text_click_color"
                        android:textSize="@dimen/text_biaoti_size"
                        android:typeface="normal" />

                    <CheckBox
                        android:id="@+id/huawei_pay_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/pay_zhifubao_select"
                        android:button="@null"
                        android:gravity="center" />
                </LinearLayout>

                <include layout="@layout/line" />
            </LinearLayout>
            <!-- 支付宝 -->

            <LinearLayout
                android:id="@+id/zhifubao_pay_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/zhifubao_pay"
                        android:gravity="center" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:paddingBottom="13dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="13dp"
                    android:text="支付宝支付"
                    android:textColor="@color/text_click_color"
                    android:textSize="@dimen/text_biaoti_size"
                    android:typeface="normal" />

                <CheckBox
                    android:id="@+id/zhifubao_pay_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pay_zhifubao_select"
                    android:button="@null"
                    android:gravity="center" />
            </LinearLayout>

            <include layout="@layout/line" />
            <!-- 微信 -->

            <LinearLayout
                android:id="@+id/weixin_pay_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/weixin_pay"
                        android:gravity="center" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:paddingBottom="13dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="13dp"
                    android:text="微信支付"
                    android:textColor="@color/text_click_color"
                    android:textSize="@dimen/text_biaoti_size"
                    android:typeface="normal" />

                <CheckBox
                    android:id="@+id/weixin_pay_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pay_zhifubao_select"
                    android:button="@null"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <!-- 会员特权 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/user_putong_member_note_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="5dp"
                    android:text="会员特权"
                    android:textColor="@color/text_noclick_color"
                    android:textSize="@dimen/text_biaoti_size" />

                <TextView
                    android:id="@+id/user_putong_member_note_title_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:drawableRight="@drawable/usercenter_arrow_img"
                    android:gravity="center"
                    android:text="更多特权"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_biaoti_size"
                    android:visibility="gone" />
            </RelativeLayout>

            <include layout="@layout/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/user_putong_member_note_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/user_putong_member_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/text_noclick_color"
                        android:textSize="@dimen/text_biaoti_size" />

                    <TextView
                        android:id="@+id/user_putong_member_note_detle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/text_noclick_color"
                        android:textSize="@dimen/text_biaoti_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/user_putong_member_note_img2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/user_putong_member_note2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/text_noclick_color"
                        android:textSize="@dimen/text_biaoti_size" />

                    <TextView
                        android:id="@+id/user_putong_member_note_detle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/text_noclick_color"
                        android:textSize="@dimen/text_biaoti_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- 会员说明 -->

        <LinearLayout
            android:id="@+id/user_member_instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/weixin_pay"
                    android:gravity="center" />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="会员说明"
                android:textColor="@color/text_click_color"
                android:textSize="@dimen/text_biaoti_size"
                android:typeface="normal" />
        </LinearLayout>
    </LinearLayout>
    <!-- </ScrollView> -->

</RelativeLayout>