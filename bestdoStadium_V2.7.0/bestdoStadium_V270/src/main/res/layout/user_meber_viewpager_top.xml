<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_meber_lay_top_img"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/btn_blue_color"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/usrecenter_relay_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/jianju"
        android:padding="12dip" >

        <com.bestdo.bestdoStadiums.utils.CircleImageView
            android:id="@+id/usrecenter_iv_head"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/contentDescription" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/usrecenter_iv_head"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/usrecenter_tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padd_imgtextleftright"
                    android:text="@string/usercenter_namemoren"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_pagetop_size" />

                <TextView
                    android:id="@+id/usrecenter_tv_usermember_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:background="@drawable/corners_rectangle_red"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_min_size"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/usrecenter_tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padd_imgtextleftright"
                android:text="1231"
                android:textColor="@color/white"
                android:textSize="@dimen/text_zhu_size" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/user_member_topay_bottom_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padd_leftright"
        android:gravity="right"
        android:paddingRight="@dimen/padd_imgtextleftright"
        android:textColor="@color/white"
        android:textSize="@dimen/text_contents_size" />

</LinearLayout>