<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical" >

    <!-- 上部 -->

    <include layout="@layout/page_top" />

    <include layout="@layout/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/success_relay_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/usercenter_background_baijinmeber_img_yuan"
                android:layout_margin="12dp" >

                <com.bestdo.bestdoStadiums.utils.CircleImageView
                    android:id="@+id/success_member_iv_head"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:contentDescription="@string/contentDescription" />

                <LinearLayout
                    android:id="@+id/success_member_iv_head2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                     android:layout_marginRight="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/success_member_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_click_color"
                        android:textSize="@dimen/text_pagetop_size" />

                    <TextView
                        android:id="@+id/success_member_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/text_contents_color"
                        android:textSize="@dimen/text_contents_size" />

                    <TextView
                        android:id="@+id/success_member_bottom_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingTop="10dp"
                        android:textColor="@color/text_noclick_color"
                        android:textSize="@dimen/text_contents_size" />
                </LinearLayout>
            </LinearLayout>
            <!--
            <com.bestdo.bestdoStadiums.control.view.HuitanCustomView
                android:id="@+id/huitanCustomView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.bestdo.bestdoStadiums.control.view.HuitanCustomView>
            -->

            <LinearLayout
                android:id="@+id/user_meber_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="-6dp"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/user_getMember_success_note"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|bottom"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_pagetop_size" />

                <TextView
                    android:id="@+id/user_getMember_success_validDays"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_pagetop_size" />

                <TextView
                    android:id="@+id/user_getMember_success_endTimeMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|top"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_zhu_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical|bottom"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/success_member_bottom_goto_stadium_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="去看看场馆"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_contents_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/success_member_bottom_goto_shangcheng_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:text="去商场逛逛"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_contents_size" />
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>

</LinearLayout>