<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp110"
        android:layout_weight="3" >

        <TextView
            android:id="@+id/tv_run_title"
            style="@style/tv_walk_center"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp15" />

        <TextView
            android:id="@+id/tv_run_count"
            style="@style/tv_walk_center"
            android:layout_below="@+id/tv_run_title"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginTop="@dimen/dp20"
            android:text="0.00"
            android:textSize="100sp" />

        <TextView
            android:id="@+id/tv_run_bottom"
            style="@style/tv_walk_center"
            android:layout_below="@+id/tv_run_count"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="1.27"
        android:background="@drawable/walk_white"
        android:gravity="center|bottom"
        android:paddingBottom="0dp" >

        <ImageView
            android:id="@+id/img_run"
            android:layout_width="@dimen/dp82"
            android:layout_height="@dimen/dp82"
            android:src="@drawable/run" />
    </LinearLayout>

</LinearLayout>