<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_card_list_item_out_lin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/user_cards_listitem_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

    <LinearLayout
        android:id="@+id/user_card_list_item_top_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="12dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginRight="2dp" >

            <TextView
                android:id="@+id/user_cards_listitem_text_fuhao"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:lineSpacingMultiplier="0.8"
                android:lines="1"
                android:paddingLeft="5dp"
                android:text="@string/unit_fuhao_money"
                android:textSize="@dimen/text_contents_size" />

            <TextView
                android:id="@+id/user_cards_listitem_text_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:lineSpacingMultiplier="0.8"
                android:lines="1"
                android:paddingLeft="2dp"
                android:text="0"
                android:textSize="@dimen/text_pagetop_size" />
            
        </LinearLayout>
		<ImageView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="10dp"
		        android:src="@drawable/user_cards_listitem_img_line_gray"
		         />
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_marginLeft="2dp"
             >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/user_cards_listitem_text_cardnam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_contents_color"
                    android:textSize="@dimen/text_pagetop_size" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No."
                        android:textColor="@color/text_noclick_color"
                        android:textSize="@dimen/text_contents_size" >
                    </TextView>

                    <TextView
                        android:id="@+id/user_cards_listitem_text_cardno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_contents_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/user_cards_listitem_text_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_noclick_color"
                    android:textSize="@dimen/text_zhu_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>