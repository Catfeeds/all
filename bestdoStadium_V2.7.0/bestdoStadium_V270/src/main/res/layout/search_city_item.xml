<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/stadiumsearchcity_item_tv_catalog"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/page_bg"
        android:paddingBottom="8dip"
        android:paddingLeft="12dip"
        android:paddingTop="8dip"
        android:textColor="@color/text_noclick_color"
        android:textSize="@dimen/text_contents_size" />

    <ImageView
        android:id="@+id/stadiumsearchcity_item_ivtopname_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:background="@null"
        android:contentDescription="@string/contentDescription" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
         android:layout_marginLeft="20dip"
        android:orientation="vertical" >

        <com.bestdo.bestdoStadiums.utils.MyGridView
            android:id="@+id/renmen_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/transparent"
            android:cacheColorHint="#00000000"
            android:fadeScrollbars="true"
            android:focusable="true"
            android:listSelector="@drawable/list_notselector"
            android:numColumns="4"
            android:overScrollMode="never"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/stadiumsearchcity_item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_contents_color"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>