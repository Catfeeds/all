<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/jianju"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- 订单信息 -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/page_bg"
        android:padding="10dip"
        android:text="@string/userOrdersDetails_payinfo"
        android:textColor="@color/text_noclick_color"
        android:textSize="@dimen/text_zhu_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padd_leftright" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_img_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/padd_leftright" >

            <TextView
                style="@style/user_item_paddtopbottom"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/userOrdersDetails_orderallmoney"
                android:textColor="@color/text_contents_color"
                android:textSize="@dimen/text_contents_size" />

            <TextView
                android:id="@+id/userorderdetails_payinfo_tv_orderallmoney"
                style="@style/user_item_paddtopbottom"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="right|center_vertical"
                android:textColor="@color/text_click_color"
                android:textSize="@dimen/text_contents_size" />
        </LinearLayout>

        <include layout="@layout/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_img_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/padd_leftright" >

            <TextView
                style="@style/user_item_paddtopbottom"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="会员减免"
                android:textColor="@color/text_contents_color"
                android:textSize="@dimen/text_contents_size" />

            <TextView
                android:id="@+id/userorderdetails_payinfo_tv_membermoney"
                style="@style/user_item_paddtopbottom"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="right|center_vertical"
                android:textColor="@color/text_click_color"
                android:textSize="@dimen/text_contents_size" />
        </LinearLayout>

        <include layout="@layout/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_img_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/padd_leftright" >

            <TextView
                style="@style/user_item_paddtopbottom"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="账户抵扣"
                android:textColor="@color/text_contents_color"
                android:textSize="@dimen/text_contents_size" />

            <TextView
                android:id="@+id/userorderdetails_payinfo_tv_deduction"
                style="@style/user_item_paddtopbottom"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="right|center_vertical"
                android:textColor="@color/text_click_color"
                android:textSize="@dimen/text_contents_size" />
        </LinearLayout>

        <include layout="@layout/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_img_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/padd_leftright" >

            <TextView
                style="@style/user_item_paddtopbottom"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="余额抵扣"
                android:textColor="@color/text_contents_color"
                android:textSize="@dimen/text_contents_size" />

            <TextView
                android:id="@+id/userorderdetails_payinfo_tv_balance"
                style="@style/user_item_paddtopbottom"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="right|center_vertical"
                android:textColor="@color/text_click_color"
                android:textSize="@dimen/text_contents_size" />
        </LinearLayout>

        <include layout="@layout/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_img_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="@dimen/padd_leftright" >

            <TextView
                style="@style/user_item_paddtopbottom"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="实付款"
                android:textColor="@color/text_contents_color"
                android:textSize="@dimen/text_contents_size" />

            <TextView
                android:id="@+id/userorderdetails_payinfo_tv_paymoney"
                style="@style/user_item_paddtopbottom"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="right|center_vertical"
                android:textColor="@color/btn_bg"
                android:textSize="@dimen/text_contents_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>