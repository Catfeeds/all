<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/page_top" />

    <include layout="@layout/line" />

    <LinearLayout
        android:id="@+id/user_card_mi_detail_lay"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/detail_img_height" >

            <ImageView
                android:id="@+id/club_activity_mi_lay_top_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <EditText
            android:id="@+id/user_card_mi_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:editable="false"
            android:padding="10dp"
            android:textColor="@color/text_click_color"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_contents_size" />

        <TextView
            android:id="@+id/user_card_mi_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/text_click_color"
            android:textSize="@dimen/text_contents_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_img_height"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <Button
                android:id="@+id/share_friend_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/btn_blue_color"
                android:padding="@dimen/padd_leftright"
                android:text="赠送好友"
                android:textColor="@color/white"
                android:textSize="@dimen/text_pagetop_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/user_card_mi_shiyong_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/text_click_color"
            android:textSize="@dimen/text_zhu_size" />
    </LinearLayout>

</LinearLayout>