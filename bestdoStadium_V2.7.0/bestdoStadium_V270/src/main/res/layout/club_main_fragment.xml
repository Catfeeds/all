<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/page_bg"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/padd_leftright"
                android:layout_marginRight="@dimen/padd_leftright"
                android:background="@drawable/corners_bg"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/padd_topbottom"
                android:paddingLeft="@dimen/padd_leftright"
                android:paddingRight="@dimen/padd_leftright"
                android:paddingTop="@dimen/padd_topbottom" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="简介："
                    android:textColor="@color/text_noclick_color"
                    android:textSize="@dimen/text_contents_size" />

                <TextView
                    android:id="@+id/club_main_text_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_noclick_color"
                    android:textSize="@dimen/text_zhu_size" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/club_main_member_rel"
                style="@style/user_item_paddlefgtright"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padd_topbottom"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/padd_imgtextleftright"
                    android:text="俱乐部成员"
                    android:textColor="@color/text_noclick_color"
                    android:textSize="@dimen/text_contents_size" />

                <TextView
                    android:id="@+id/club_main_text_member_count"
                    style="@style/user_item_paddtopbottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/padd_imgtextleftright"
                    android:layout_toLeftOf="@+id/usercenter_iv_allorderarrow"
                    android:textColor="@color/text_noclick_color"
                    android:textSize="@dimen/text_contents_size" />

                <ImageView
                    android:id="@+id/usercenter_iv_allorderarrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/usercenter_arrow_img"
                    android:contentDescription="@string/contentDescription" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>