<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/corners_bg"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/user_item_paddlefgtright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padd_leftright"
        android:paddingTop="@dimen/padd_leftright" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/campaginlistitem_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/text_noclick_color"
                android:textSize="@dimen/text_contents_size" />

            <TextView
                android:id="@+id/campaginlistitem_tv_centent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|top"
                android:maxLines="2"
                android:textColor="@color/red"
                android:textSize="@dimen/text_zhu_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/campaginlistitem_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/text_click_color"
            android:textSize="@dimen/text_contents_size" />

        <TextView
            android:id="@+id/campaginlistitem_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/text_noclick_color"
            android:textSize="@dimen/text_contents_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/campaginlistitem_layout_bianji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padd_imgtextleftright"
            android:paddingTop="@dimen/padd_imgtextleftright" >

            <TextView
                android:id="@+id/campaginlistitem_tv_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corners_red_kong"
                android:paddingBottom="@dimen/padd_imgtextleftright"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="@dimen/padd_imgtextleftright"
                android:singleLine="true"
                android:text="删除"
                android:textColor="@color/red"
                android:textSize="@dimen/text_contents_size" />

            <TextView
                android:id="@+id/campaginlistitem_tv_startorstop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padd_imgtextleftright"
                android:layout_marginRight="@dimen/padd_leftright"
                android:background="@drawable/corners_selectbtnbg"
                android:paddingBottom="@dimen/padd_imgtextleftright"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="@dimen/padd_imgtextleftright"
                android:singleLine="true"
                android:text="启用"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_contents_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>