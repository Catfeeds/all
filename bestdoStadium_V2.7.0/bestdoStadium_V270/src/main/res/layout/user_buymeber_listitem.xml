<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/user_member_out_lin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/padd_leftright"
        android:layout_marginRight="@dimen/padd_leftright"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padd_leftright"
         >

        <LinearLayout
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/user_buymeber_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开通24个月"
                    android:textColor="@color/text_click_color"
                    android:textSize="@dimen/text_contents_size" />

                <ImageView
                    android:id="@+id/amazing_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/amazing_icon"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/user_buymeber_detle_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12个月,每月12元"
                android:textColor="@color/text_noclick_color"
                android:textSize="@dimen/text_zhu_size" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/member_iv_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/member_img_select"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/user_putong_meber_price1"
                android:lines="1"
                android:paddingLeft="5dp"
                android:text="@string/unit_fuhao_money"
                android:textColor="@color/red"
                android:textSize="@dimen/text_zhu_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_putong_meber_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|right"
                android:text="600"
                android:textColor="@color/red"
                android:paddingRight="@dimen/padd_leftright"
                android:textSize="@dimen/text_zhu_size"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>