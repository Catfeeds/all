<?xml version="1.0" encoding="utf-8"?>
<!-- 上部圆角 灰色背景 灰色边框  长方体 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
             <padding 
			   android:left="5dp" 
			   android:top="5dp" 
			   android:right="5dp" 
			   android:bottom="5dp" 
			/>
            <solid android:color="#D5D5D5" />
            <corners android:topLeftRadius="5dp" android:topRightRadius="5dp"
                android:bottomRightRadius="0.1dp" android:bottomLeftRadius="0.1dp" />
            <stroke android:width="1dp" android:color="#D5D5D5" />
        </shape>
    </item>
    <item >
        <shape>
            <padding 
			   android:left="5dp" 
			   android:top="5dp" 
			   android:right="5dp" 
			   android:bottom="5dp" 
			/> 
            <solid android:color="#D5D5D5" />
            <corners android:topLeftRadius="5dp" android:topRightRadius="5dp"
                android:bottomRightRadius="0.1dp" android:bottomLeftRadius="0.1dp" />
            <stroke android:width="1dp" android:color="#D5D5D5" />
        </shape>
    </item>
    
</layer-list>