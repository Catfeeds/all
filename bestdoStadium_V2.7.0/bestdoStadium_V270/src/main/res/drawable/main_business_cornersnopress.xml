<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="@color/page_top_bg" />

            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="5dp"
                android:topRightRadius="0dp" />

            <stroke
                android:width="1dp"
                android:color="@color/text_noclick_color" />
        </shape>
    </item>
    <item
        android:left="1dp"
        android:top="1dp">
        <shape>
            <padding
                android:bottom="8dp"
                android:left="20dp"
                android:right="20dp"
                android:top="8dp" />

            <solid android:color="@color/page_top_bg" />

            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="5dp"
                android:topRightRadius="0dp" />

            <stroke
                android:width="1dp"
                android:color="@color/page_top_bg" />
        </shape>
    </item>

</layer-list>