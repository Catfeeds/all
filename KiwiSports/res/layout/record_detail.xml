<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/page_top" />

    <include layout="@layout/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <!-- map -->

            <FrameLayout
                android:id="@+id/layout_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <com.baidu.mapapi.map.MapView
                    android:id="@+id/mMapView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:clickable="true" />

                <FrameLayout
                    android:id="@+id/fragment_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.2"
                    android:background="@color/black" />

                <LinearLayout
                    android:id="@+id/layoutmap_property"
                    style="@style/padd_topbottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/padd_leftright"
                    android:background="@drawable/corners_bg_shen"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <com.KiwiSports.utils.MyGridView
                        android:id="@+id/map_property"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:cacheColorHint="@color/transparent"
                        android:divider="@null"
                        android:fadeScrollbars="true"
                        android:fadingEdge="none"
                        android:gravity="left"
                        android:horizontalSpacing="10dp"
                        android:listSelector="@drawable/list_notselector"
                        android:numColumns="3"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        android:verticalSpacing="10dp" >
                    </com.KiwiSports.utils.MyGridView>
                </LinearLayout>
            </FrameLayout>
            <!-- date -->

            <LinearLayout
                android:id="@+id/layout_date"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <com.KiwiSports.utils.MyGridView
                    android:id="@+id/date_property"
                    style="@style/padd_topbottom"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/main_tab_page_bg"
                    android:cacheColorHint="@color/transparent"
                    android:divider="@null"
                    android:fadeScrollbars="true"
                    android:fadingEdge="none"
                    android:gravity="left"
                    android:horizontalSpacing="10dp"
                    android:listSelector="@drawable/list_notselector"
                    android:numColumns="3"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:verticalSpacing="10dp" >
                </com.KiwiSports.utils.MyGridView>
            </LinearLayout>
        </FrameLayout>

        <!-- bottom -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/menu_height"
            android:layout_gravity="bottom"
            android:background="@color/main_tab_page_bg"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_map"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:paddingLeft="40dp"
                    android:text="@string/record_map"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_contents_size" />

                <TextView
                    android:id="@+id/tv_mapline"
                    android:layout_width="20dp"
                    android:layout_height="5dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/ching" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:paddingRight="40dp"
                    android:text="@string/record_date"
                    android:textColor="@color/white_light"
                    android:textSize="@dimen/text_contents_size" />

                <TextView
                    android:id="@+id/tv_dateline"
                    android:layout_width="20dp"
                    android:layout_height="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/ching" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>